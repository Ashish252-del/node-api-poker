<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<div class="container" style="margin-top:5%;">
    <div class="row">
        <div class="jumbotron" style="box-shadow: 2px 2px 4px #000000;">
            <% if(payment_status=='PAYMENT_SUCCESS'){ %>
                <h2 class="text-center">YOUR TRANSACTION HAS BEEN SUCCESSFULLY DONE</h2>
                <h3 class="text-center">Thank you for your payment, itâ€™s processing</h3>
                <p class="text-center">Your Transaction id # is: <%= transaction_id %></p>
            <% }else if(payment_status=='PAYMENT_ERROR'){ %>
                <h2 class="text-center">YOUR TRANSACTION HAS BEEN FAILED</h2>
                <p class="text-center">Your Transaction id # is: <%= transaction_id %></p>
            <% }else if(payment_status=='PAYMENT_PENDING'){ %>
                <h2 class="text-center">YOUR TRANSACTION HAS BEEN PENDING</h2>
                <p class="text-center">Your Transaction id # is: <%= transaction_id %></p>
            <% }else if(payment_status=='PAYMENT_DECLINED'){ %>
                <h2 class="text-center">YOUR TRANSACTION HAS BEEN DECLINED</h2>
                <p class="text-center">Your Transaction id # is: <%= transaction_id %></p>
            <% } else{ %>
                    <h2 class="text-center">EXPIRED</h2>
            <% } %>


            <center><div class="btn-group" style="margin-top:50px;">
                    <a href="uniwebview://close" class="btn btn-lg btn-warning">CONTINUE</a>
                </div></center>
        </div>
    </div>
</div>
